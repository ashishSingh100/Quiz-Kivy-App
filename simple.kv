            text:'Ser Jaime Lannister'
            size:30,30
            on_release:app.root.current="s"
        Button:
            text:"Robert Baratheon"
            size:30,30
            on_release:app.root.current="4"
        Button:
            text:'Tywin Lannister'
            size:30,30
            on_release:app.root.current="4"
        Button:
            text:'Aerys Targaryen'
            size:30,30
            on_release:app.root.current="4"

<FourthScreen>:
    name:'4'
    BoxLayout:
        orientation:"vertical"

        Label:
            text:"Tyrion gives a reason for wanting to travel with the new recruits\nof the Night's Watch and see the Wall. What was his reason?"
            font_size:20
        Button:
            text:'To stand on top of the Wall\nand piss off the edge of the world'
            size:30,30
            on_release:app.root.current="s"  
        Button:
            text:"To take\nthe black"
            size:30,30
            on_release:app.root.current="5"
        Button:
            text:'To visit old friends\nof his in the Nights Watch'
            size:30,30
            on_release:app.root.current="5"
        Button:
            text:'To get away from\nhis sister Cersei'
            size:30,30
            on_release:app.root.current="5"



<FifthScreen>:
    name:'5'
    BoxLayout:
        orientation:"vertical"

        Label:
            text:"In the book, 'A Game of Thrones' it is said that Ser Ilyn Payne\nhad his tongue ripped out with hot pincers. Who ordered it to happen?"
            font_size:20
        Button:
            text:'Ser Jaime Lannister'
            size:30,30
            on_release:app.root.current="s"
            
        Button:
            text:"Robert Baratheon"
            size:30,30
            on_release:app.root.current="6"
        Button:
            text:'Tywin Lannister'
            size:30,30
            on_release:app.root.current="6"
        Button:
            text:'Aerys Targaryen'
            size:30,30
            on_release:app.root.current="6"


<WinScreen>:
    name:'6'
    lbl1:lbl1
    BoxLayout:
        orientation:'vertical'
        VideoPlayer:
            source:"1.3gp"
            size_hint:1,1
            state:"play"
        Label:
            id:lbl1
            text:'YOU WON AND HERES A GIFT'
        Button:
            text:'FOR EXIT'
            size:30,30
            on_press:App.get_running_app().stop()


<ImageButton@Button>: 
    source: None
    Image: 
        source: root.source 
        pos: root.pos 
        size: root.size

<Score1>:
